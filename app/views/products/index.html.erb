<div>
  <% products.find_in_batches(batch_size: 4).each do |product_batch| %>
    <div class="row" style="margin:1%">
      <% product_batch.each do |product| %>
        <div class="col-md-3">
          <a href="<%= product_path(product.id) %>">
            <div class="card" style="width: 20rem;">
              <img class="card-img-top" src="http://bit.ly/2gYpuNe" style="max-height:100%; max-width:100%">
              <div class="card-block">
                <h4 class="card-title"><%= product.name %></h4>
                <p class="card-text"><%= product.description.truncate(100) %></p>
              </div>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
